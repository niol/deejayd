<?xml version="1.0"?>

<bindings xmlns="http://www.mozilla.org/xbl"
          xmlns:xul="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
          xmlns:xbl="http://www.mozilla.org/xbl">

  <!-- VOLUME CONTROL -->
  <binding id="volume" extends="./progress_slider.xml#progress_slider">

   <handlers>
     <handler
        event="progressSliderChange"
        action="PlayerObserver.onTrackVolume(this);"/>
     <handler
        event="progressSliderRelease"
        action="PlayerObserver.onReleaseVolume(this);"/>
   </handlers>

  <implementation>

    <method name="updateVolume">
      <parameter name="volValue"/>
      <body>
        <![CDATA[
          try {
            if (this.trackingVolume)
              return;
            this.value = volValue;
          } catch (err) {
            dump("player_controls.xml - onRemoteVolumeChange - " + err + "\n");
          }
        ]]>
      </body>
    </method>

   </implementation>

  </binding>


  <!-- SEEK CONTROL -->
  <binding id="seekbar" extends="./progress_slider.xml#progress_slider">
   <handlers>
     <handler
        event="progressSliderChange"
        action="PlayerObserver.onTrackSeekbar(this);"/>
     <handler
        event="progressSliderRelease"
        action="PlayerObserver.onReleaseSeekbar(this);"/>
   </handlers>

  <implementation>

    <method name="updateSeekbar">
      <parameter name="timeValue"/>
      <body>
        <![CDATA[
          try {
            if (this.trackingPosition)
              return;
            this.value = timeValue;
          } catch (e) {
            dump("player_controls.xml - onRemotePositionChange - " + e);
          }
        ]]>
      </body>
    </method>

   </implementation>

  </binding>




</bindings>

