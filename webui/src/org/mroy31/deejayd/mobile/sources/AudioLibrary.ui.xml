<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:mobile="urn:import:org.mroy31.deejayd.mobile.widgets">
  <ui:with field="resources"
        type="org.mroy31.deejayd.mobile.resources.MobileResources"/>

  <g:FlowPanel>
    <g:Label ui:field="rootPath"
             addStyleNames="{resources.mobileCss.contextHeader}"></g:Label>

    <g:HorizontalPanel ui:field="pagerPanel" width="100%">
      <g:HorizontalPanel ui:field="pager"
          addStyleNames="{resources.mobileCss.mListPager}
                       {resources.mobileCss.center}">
        <g:Button ui:field="goFirst"
              addStyleNames="{resources.mobileCss.playerButton}
                           {resources.mobileCss.goFirst}"></g:Button>
        <g:Button ui:field="goPrevious"
              addStyleNames="{resources.mobileCss.playerButton}
                           {resources.mobileCss.goPrevious}"></g:Button>
        <g:Label ui:field="pageDesc"></g:Label>
        <g:Button ui:field="goNext"
              addStyleNames="{resources.mobileCss.playerButton}
                           {resources.mobileCss.goNext}"></g:Button>
        <g:Button ui:field="goLast"
              addStyleNames="{resources.mobileCss.playerButton}
                           {resources.mobileCss.goLast}"></g:Button>
      </g:HorizontalPanel>
    </g:HorizontalPanel>

    <mobile:ListPanel ui:field="list"></mobile:ListPanel>

    <g:HorizontalPanel width="100%">
        <g:Label ui:field="loadButton"
                 addStyleNames="{resources.mobileCss.button}
                                {resources.mobileCss.center}"></g:Label>
    </g:HorizontalPanel>
  </g:FlowPanel>
</ui:UiBinder>