<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:mobile="urn:import:org.mroy31.deejayd.mobile.widgets">
  <ui:with field="resources"
        type="org.mroy31.deejayd.mobile.resources.MobileResources"/>
    
  <g:VerticalPanel width="100%" height="100%">
    
    <!-- header -->
    <g:cell>
	   <g:HorizontalPanel addStyleNames="{resources.mobileCss.contextHeader}" width="100%">
	       <g:cell>
	           <g:FlowPanel ui:field="leftButtonBox"></g:FlowPanel>
	       </g:cell>
	       
	       <g:cell width="100%" horizontalAlignment="ALIGN_CENTER">
               <g:Label ui:field="headerTitle"></g:Label>
           </g:cell>

	   </g:HorizontalPanel>
	</g:cell>
    
    <!-- pager -->
    <g:cell>
      <mobile:Pager ui:field="pager"></mobile:Pager>
    </g:cell>
    
    <!-- contents -->
    <g:cell height="100%">
        <g:FlowPanel ui:field="tagListPanel" width="100%"/>
    </g:cell>
    
  </g:VerticalPanel>
  
</ui:UiBinder>