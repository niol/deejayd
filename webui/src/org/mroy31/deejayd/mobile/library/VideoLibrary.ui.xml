<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:c="urn:import:com.google.gwt.user.cellview.client"
  xmlns:mobile="urn:import:org.mroy31.deejayd.mobile.widgets">
  <ui:with field="resources"
        type="org.mroy31.deejayd.mobile.resources.MobileResources"/>

  <g:FlowPanel>
    <g:Label ui:field="rootPath"
             addStyleNames="{resources.mobileCss.contextHeader}"></g:Label>

    <g:HorizontalPanel ui:field="pagerPanel" width="100%">
      <g:cell horizontalAlignment="ALIGN_CENTER">
          <mobile:Pager ui:field="pager"></mobile:Pager>
      </g:cell>
    </g:HorizontalPanel>

    <c:DeejaydCellTable ui:field="list"></c:DeejaydCellTable>
  </g:FlowPanel>
</ui:UiBinder>