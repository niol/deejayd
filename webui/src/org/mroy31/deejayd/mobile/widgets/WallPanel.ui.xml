<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:mobile="urn:import:org.mroy31.deejayd.mobile.widgets">
  <ui:with field="resources"
        type="org.mroy31.deejayd.mobile.resources.MobileResources"/>

  <g:FlowPanel ui:field="rootPanel" width="100%" height="100%">
  
	  <g:VerticalPanel width="100%" height="100%">
	    
	    <g:cell heigtht="40px">
		    <g:HorizontalPanel ui:field="header" width="100%"
		            addStyleNames="{resources.mobileCss.wallHeader}">
		      <g:cell>
		        <g:FlowPanel ui:field="leftButtonBox" ></g:FlowPanel>
		      </g:cell>
		      <g:cell width="100%" horizontalAlignment='ALIGN_CENTER'>
		        <g:HTML ui:field="title"
		               addStyleNames="{resources.mobileCss.wallHeaderTitle}"></g:HTML>
		      </g:cell>
		      <g:cell>
		        <g:FlowPanel ui:field="rightButtonBox" ></g:FlowPanel>
		      </g:cell>      
		    </g:HorizontalPanel>
		</g:cell>
	    
	    <g:cell height="100%">
	      <g:FlowPanel ui:field="contents" width="100%" height="100%"></g:FlowPanel>
	    </g:cell>
	    
	  </g:VerticalPanel>
  
  </g:FlowPanel>
</ui:UiBinder>