<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:mobile="urn:import:org.mroy31.deejayd.mobile.widgets">

  <ui:with field="resources"
           type="org.mroy31.deejayd.mobile.resources.MobileResources"/>

  <g:VerticalPanel width="100%" height="100%">
    
    <g:cell height="100%">
	    <g:FlowPanel width="100%" height="100%">
	      <g:FlowPanel ui:field="optionPanel" 
	           addStyleNames="{resources.mobileCss.optionPanel}" >
	        <g:FlowPanel addStyleNames="{resources.mobileCss.center}">
	          <g:Button ui:field="videoOptsButton" width="90%"
	                   addStyleNames="{resources.mobileCss.button}">
	          </g:Button>
	        </g:FlowPanel>
	        <g:HorizontalPanel addStyleNames="{resources.mobileCss.seekBar}">
	          <g:cell width="100%" horizontalAlignment="ALIGN_CENTER">
	            <mobile:TimeSeekBar ui:field="seekBar"></mobile:TimeSeekBar>
	          </g:cell>
	          <g:cell verticalAlignment="ALIGN_MIDDLE">
	            <g:Button ui:field="seekButton"
                       addStyleNames="{resources.mobileCss.button}">
                </g:Button>
	          </g:cell>
	        </g:HorizontalPanel>
	      </g:FlowPanel>
	
	      <g:FlowPanel addStyleNames="{resources.mobileCss.coverImg}">
	        <g:Image ui:field="coverImg"></g:Image>
	      </g:FlowPanel>
	    </g:FlowPanel>
	</g:cell>
	
	<g:cell>
	    <g:FlowPanel width="100%" height="40px">
		    <g:FlowPanel addStyleNames="{resources.mobileCss.playerButtonPanel}">
	            <g:Button ui:field="previousButton"
	              addStyleNames="{resources.mobileCss.playerButton}
	                             {resources.mobileCss.previous}"></g:Button>
	            <g:Button ui:field="playToggleButton"
	              addStyleNames="{resources.mobileCss.playerButton}
	                             {resources.mobileCss.play}"></g:Button>
	            <g:Button ui:field="stopButton"
	              addStyleNames="{resources.mobileCss.playerButton}
	                             {resources.mobileCss.stop}"></g:Button>
	            <g:Button ui:field="nextButton"
	              addStyleNames="{resources.mobileCss.playerButton}
	                             {resources.mobileCss.next}"></g:Button>
	        </g:FlowPanel>
        </g:FlowPanel>
     </g:cell>

    <g:cell>
        <g:FlowPanel height="60px">
            <mobile:VolumeControl ui:field="volSlider"></mobile:VolumeControl>
        </g:FlowPanel>
    </g:cell>
  </g:VerticalPanel>
</ui:UiBinder>