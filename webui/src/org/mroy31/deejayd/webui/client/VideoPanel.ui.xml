<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:webui="urn:import:org.mroy31.deejayd.webui.widgets">
  <ui:with field="resources"
        type="org.mroy31.deejayd.webui.resources.WebuiResources"/>

  <g:DockLayoutPanel>
    <g:center>
      <g:DockLayoutPanel>
        <g:north size="24">
          <g:HorizontalPanel width="100%" height="100%" ui:field="northPanel"
                styleName="{resources.webuiCss.blueToolbar}">
          </g:HorizontalPanel>
        </g:north>

        <g:south size="22">
          <g:HorizontalPanel styleName="{resources.webuiCss.toolbar}"
                ui:field="southPanel" width="100%">
            <g:HorizontalPanel ui:field="searchPanel">
              <g:TextBox ui:field="searchEntry"></g:TextBox>
              <g:Button ui:field="searchButton"
                styleName="{resources.webuiCss.modeToolbarButton}
                           {resources.webuiCss.searchButton}"></g:Button>
            </g:HorizontalPanel>
          </g:HorizontalPanel>
        </g:south>

        <g:center>
          <g:ScrollPanel>
            <g:Tree ui:field="videoTree"></g:Tree>
          </g:ScrollPanel>
        </g:center>
      </g:DockLayoutPanel>
    </g:center>

    <g:south size="22">
      <g:FlowPanel width="100%">
        <webui:LibraryManager height="100%" width="100%"
              ui:field="updateButton"></webui:LibraryManager>
      </g:FlowPanel>
    </g:south>
  </g:DockLayoutPanel>
</ui:UiBinder>