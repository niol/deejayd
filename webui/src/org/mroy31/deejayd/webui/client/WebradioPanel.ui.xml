<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:c="urn:import:com.google.gwt.user.cellview.client"
  xmlns:cellview="urn:import:org.mroy31.deejayd.webui.cellview">
  <ui:with field="resources"
        type="org.mroy31.deejayd.webui.resources.WebuiResources"/>

  <g:DockLayoutPanel>
     <g:north size="24">
        <g:FlowPanel width="100%"
                styleName="{resources.webuiCss.blueToolbar}">
          <g:HorizontalPanel height="100%" spacing="2">
            <g:cell verticalAlignment="ALIGN_MIDDLE">
              <g:Label
                addStyleNames="{resources.webuiCss.bold}"
                ui:field="panelTitle"></g:Label>
            </g:cell>
            <g:cell verticalAlignment="ALIGN_MIDDLE">
              <g:ListBox ui:field="sourceListBox"></g:ListBox>
            </g:cell>
          </g:HorizontalPanel>
        </g:FlowPanel>
     </g:north>

     <g:center>
       <cellview:WCategoryList ui:field="categoryList"></cellview:WCategoryList>
     </g:center>
     
     <g:south size="24">
       <g:FlowPanel styleName="{resources.webuiCss.toolbar}">
         <g:HorizontalPanel ui:field="categoriesToolbar">
           <g:cell verticalAlignment="ALIGN_MIDDLE">
             <g:Button styleName="{resources.webuiCss.modeToolbarButton}
                                  {resources.webuiCss.addButton}"
                       ui:field="addCatButton"></g:Button>
           </g:cell>
           
           <g:cell verticalAlignment="ALIGN_MIDDLE">
             <g:Button styleName="{resources.webuiCss.modeToolbarButton}
                                  {resources.webuiCss.addButton}"
                       ui:field="addButton"></g:Button>
           </g:cell>
         </g:HorizontalPanel>
       </g:FlowPanel>
     </g:south>
  </g:DockLayoutPanel>
</ui:UiBinder>