<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:webui="urn:import:org.mroy31.deejayd.webui.medialist"
  xmlns:widgets="urn:import:org.mroy31.deejayd.webui.widgets">
  <ui:with field="resources"
        type="org.mroy31.deejayd.webui.resources.WebuiResources"/>

  <g:DockLayoutPanel ui:field="mainPanel">
       <g:north size="22">
           <g:HorizontalPanel
                styleName="{resources.webuiCss.blueToolbar}"
                ui:field="topToolbar" width="100%" height="24px">
             <g:HorizontalPanel ui:field="searchPanel">
               <g:TextBox ui:field="searchPattern"></g:TextBox>
               <g:ListBox ui:field="searchType"></g:ListBox>
               <g:Button ui:field="searchClearButton"></g:Button>
               <g:Button ui:field="chooseAllButton"></g:Button>
             </g:HorizontalPanel>

             <g:Label styleName="{resources.webuiCss.toolbarDescLabel}"
                      ui:field="descLabel">
             </g:Label>
           </g:HorizontalPanel>
       </g:north>

       <g:south size="22">
            <g:HorizontalPanel height="100%" ui:field="bottomToolbar"
                    width="100%" styleName="{resources.webuiCss.toolbar}">
                <g:HorizontalPanel ui:field="leftBottomToolbar">
                    <g:Button ui:field="goToCurrent"
                        styleName="{resources.webuiCss.modeToolbarButton}
                                   {resources.webuiCss.gotoButton}">
                    </g:Button>
                </g:HorizontalPanel>

                <g:HorizontalPanel ui:field="rightBottomToolbar">
                    <g:Label ui:field="loadLabel"
                        styleName="{resources.webuiCss.toolbarDescLabel}">
                    </g:Label>
                </g:HorizontalPanel>
            </g:HorizontalPanel>
       </g:south>
  </g:DockLayoutPanel>
</ui:UiBinder>