<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:webui="urn:import:org.mroy31.deejayd.common.widgets">
  <ui:with field="resources"
        type="org.mroy31.deejayd.webui.resources.WebuiResources"/>

  <g:DockLayoutPanel>
    <g:north size="22">
      <g:FlowPanel width="100%">
        <g:Button height="100%" width="100%" ui:field="panelModeButton">
        </g:Button>
      </g:FlowPanel>
    </g:north>

    <g:center>
        <g:ScrollPanel addStyleNames="{resources.webuiCss.plsPanel}">
            <g:VerticalPanel width="100%" ui:field="plsList"></g:VerticalPanel>
        </g:ScrollPanel>
    </g:center>

    <g:south size="22">
      <g:FlowPanel width="100%">
        <webui:LibraryManager height="100%" width="100%"
          ui:field="updateButton">
        </webui:LibraryManager>
      </g:FlowPanel>
    </g:south>

    <g:south size="22">
      <g:FlowPanel width="100%" styleName="{resources.webuiCss.toolbar}">
        <g:HorizontalPanel ui:field="plsToolbar">
          <g:Button ui:field="plsStaticNewButton"
              styleName="{resources.webuiCss.addButton}
                         {resources.webuiCss.iconAndTextButton}
                         {resources.webuiCss.toolbarButton}"></g:Button>
          <g:Button ui:field="plsMagicNewButton"
              styleName="{resources.webuiCss.addButton}
                         {resources.webuiCss.iconAndTextButton}
                         {resources.webuiCss.toolbarButton}"></g:Button>
        </g:HorizontalPanel>
      </g:FlowPanel>
    </g:south>
  </g:DockLayoutPanel>
</ui:UiBinder>