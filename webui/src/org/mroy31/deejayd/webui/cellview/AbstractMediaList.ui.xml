<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:c="urn:import:com.google.gwt.user.cellview.client"
  xmlns:webui="urn:import:org.mroy31.deejayd.webui.cellview">
  <ui:with field="resources"
        type="org.mroy31.deejayd.webui.resources.WebuiResources"/>

    <ui:style>
        .table {
            table-layout: fixed;
            width: 100%;
        }
    </ui:style>

  <g:DockLayoutPanel>
       <g:north size="22">
           <g:FlexTable cellSpacing='0' cellPadding='0'
               addStyleNames="{style.table} {resources.webuiCss.toolbar}"
               ui:field="header">
           </g:FlexTable>
       </g:north>

       <g:center>
           <webui:ScrollMediaPanel ui:field="mediaListPanel">
               <c:DeejaydCellTable styleName="{style.table}" ui:field="mediaList">
               </c:DeejaydCellTable>
           </webui:ScrollMediaPanel>
       </g:center>
  </g:DockLayoutPanel>
</ui:UiBinder>