<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c="urn:import:com.google.gwt.user.cellview.client">
	<ui:with field="resources"
        type="org.mroy31.deejayd.webui.resources.WebuiResources"/>
        
	<ui:style>
        .table {
            width: 100%;
        }
    </ui:style>

  <g:DockLayoutPanel>
       <g:north size="22">
           <g:HorizontalPanel width="100%" styleName="{resources.webuiCss.toolbar}">
                    <g:cell verticalAlignment="ALIGN_MIDDLE"
                            horizontalAlignment="ALIGN_CENTER">
                        <g:Label
                            addStyleNames="{resources.webuiCss.italic}"
                             ui:field="categoryTitle"></g:Label>
                    </g:cell>
                       
           </g:HorizontalPanel>
       </g:north>

       <g:center>
           <g:ScrollPanel ui:field="categoryListPanel">
               <c:DeejaydCellTable styleName="{style.table}" ui:field="categoryList">
               </c:DeejaydCellTable>
           </g:ScrollPanel>
       </g:center>
  </g:DockLayoutPanel>
</ui:UiBinder> 