<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:webui="urn:import:org.mroy31.deejayd.webui.client">
  <ui:with field="resources"
        type="org.mroy31.deejayd.webui.resources.WebuiResources"/>

    <ui:style>
        .table {
            table-layout: fixed;
            width: 100%;
        }
    </ui:style>

  <g:DockLayoutPanel>
       <g:north size="24">
           <g:HorizontalPanel
                styleName="{resources.webuiCss.modeTopToolbar}"
                ui:field="modeTopToolbar" width="100%" height="24px">
           </g:HorizontalPanel>
       </g:north>
       <g:north size="22">
           <g:FlexTable cellSpacing='0' cellPadding='0'
               addStyleNames="{style.table} {resources.webuiCss.toolbar}"
               ui:field="modeHeader">
           </g:FlexTable>
       </g:north>
       <g:center>
           <g:ScrollPanel ui:field="modeMedialistPanel">
               <g:FlexTable cellSpacing='0' cellPadding='0'
                   styleName="{style.table}"
                   ui:field="modeMedialist">
               </g:FlexTable>
           </g:ScrollPanel>
       </g:center>
       <g:south size="22">
          <g:FlowPanel styleName="{resources.webuiCss.toolbar}">
           <g:HorizontalPanel ui:field="modeBottomToolbar">
           </g:HorizontalPanel>
          </g:FlowPanel>
       </g:south>
    </g:DockLayoutPanel>
</ui:UiBinder>