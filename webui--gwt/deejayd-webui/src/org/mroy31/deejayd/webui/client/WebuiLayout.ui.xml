<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:webui="urn:import:org.mroy31.deejayd.webui.client"
  xmlns:webuiW="urn:import:org.mroy31.deejayd.webui.widgets">
  <ui:with field="resources" type="org.mroy31.deejayd.webui.resources.WebuiResources"/>

  <g:DockLayoutPanel ui:field="mainPanel">
     <g:north size='100'>
         <g:FlowPanel ui:field="topPanel">
             <webui:PlayerUI ui:field="playerUI"></webui:PlayerUI>
             <g:Button addStyleNames="{resources.webuiCss.refreshButton}"
                       ui:field="refreshButton"></g:Button>
             <g:ListBox addStyleNames="{resources.webuiCss.modeList}"
                       ui:field="modeList"></g:ListBox>
         </g:FlowPanel>
     </g:north>

     <g:south size="22">
        <g:HorizontalPanel height="100%" width="100%" ui:field="bottomBar"
                styleName="{resources.webuiCss.blueToolbar}">
            <g:HorizontalPanel
                    styleName="{resources.webuiCss.blueToolbarBg}"
                    ui:field="queueBar">
                <g:Button ui:field="queueButton"
                    styleName="{resources.webuiCss.queueButton}
                    {resources.webuiCss.iconAndTextButton}
                    {resources.webuiCss.collapsed}">
                </g:Button>
                <g:FlowPanel>
                  <g:Image ui:field="queueState"></g:Image>
                </g:FlowPanel>
                <g:Label styleName="{resources.webuiCss.queueDesc}"
                    ui:field="queueDesc"></g:Label>

                <g:HorizontalPanel height="100%"
                        visible="false" ui:field="queueToolbar">
                    <g:Button ui:field="queueRemove"
                        styleName="{resources.webuiCss.removeButton}
                            {resources.webuiCss.iconAndTextButton}
                            {resources.webuiCss.queueToolbarButton}">
                    </g:Button>
                    <g:Button ui:field="queueClear"
                        styleName="{resources.webuiCss.clearButton}
                            {resources.webuiCss.iconAndTextButton}
                            {resources.webuiCss.queueToolbarButton}">
                    </g:Button>
                    <g:CheckBox ui:field="queueRandom"></g:CheckBox>
                    <g:Label styleName="{resources.webuiCss.toolbarDescLabel}"
                        ui:field="queueLoading"></g:Label>
                </g:HorizontalPanel>
            </g:HorizontalPanel>

            <g:Image visible="false" ui:field="loading"></g:Image>
        </g:HorizontalPanel>
     </g:south>
  </g:DockLayoutPanel>

</ui:UiBinder>