<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui">
  <ui:with field="resources"
        type="org.mroy31.deejayd.webui.resources.WebuiResources"/>

  <g:DockLayoutPanel>
    <g:north size="24">
      <g:HorizontalPanel width="100%" height="100%" ui:field="topPanel"
          styleName="{resources.webuiCss.blueToolbar}">
        <g:HorizontalPanel height="100%" ui:field="titlePanel">
          <g:Label ui:field="title"
            addStyleNames="{resources.webuiCss.italic}"></g:Label>
        </g:HorizontalPanel>
        <g:HorizontalPanel height="100%" ui:field="descPanel">
          <g:Label ui:field="description"></g:Label>
        </g:HorizontalPanel>
      </g:HorizontalPanel>
    </g:north>

    <g:center>
      <g:ScrollPanel>
        <g:Tree ui:field="dvdTree"></g:Tree>
      </g:ScrollPanel>
    </g:center>
  </g:DockLayoutPanel>
</ui:UiBinder>