<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:webui="urn:import:org.mroy31.deejayd.webui.widgets">
  <ui:with field="resources" type="org.mroy31.deejayd.webui.resources.WebuiResources"/>

    <g:HorizontalPanel>
    <g:FlowPanel styleName="{resources.webuiCss.playerButtonsBlock}">
       <g:HorizontalPanel width="100%">
           <g:Button ui:field="previousButton"
                       styleName="{resources.webuiCss.previousButton}
                                  {resources.webuiCss.playerButton}">
             </g:Button>
           <g:Button ui:field="playToggleButton"
                     styleName="{resources.webuiCss.playerButton}
                                {resources.webuiCss.playButton}">
           </g:Button>
           <g:Button ui:field="stopButton"
                       styleName="{resources.webuiCss.stopButton}
                                  {resources.webuiCss.playerButton}">
             </g:Button>
             <g:Button ui:field="nextButton"
                       styleName="{resources.webuiCss.nextButton}
                                  {resources.webuiCss.playerButton}">
             </g:Button>
       </g:HorizontalPanel>
       <webui:SliderBar ui:field="volumeBar"></webui:SliderBar>
    </g:FlowPanel>

    <g:FlowPanel visible="false" ui:field="playingPanel"
                 styleName="{resources.webuiCss.playingPanel}">
       <g:HTML styleName="{resources.webuiCss.playingTitle}"
               ui:field="playingTitle"></g:HTML>
       <g:HTML styleName="{resources.webuiCss.playingDesc}"
               ui:field="playingDesc"></g:HTML>
       <g:HorizontalPanel ui:field="seekPanel">
           <g:Button addStyleNames="{resources.webuiCss.playingTime}"
                     ui:field="playingTime">00:00 --></g:Button>
           <webui:SliderBar visible="false" ui:field="seekBar">
           </webui:SliderBar>
       </g:HorizontalPanel>
       <g:Button ui:field="optionButton">
          Advanced Options
       </g:Button>
    </g:FlowPanel>

    <g:FlowPanel visible="false" ui:field="coverPanel">
       <g:Image width="80" height="80" ui:field="coverImage"></g:Image>
    </g:FlowPanel>
  </g:HorizontalPanel>
</ui:UiBinder>