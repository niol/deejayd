<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with field="resources" type="org.mroy31.deejayd.webui.resources.WebuiResources"/>

    <ui:style>
        .table {
            table-layout: fixed;
            width: 100%;
            height: 100%;
        }
    </ui:style>

	<g:DockLayoutPanel>
       <g:north size="24">
           <g:HorizontalPanel ui:field="modeTopToolbar">
           </g:HorizontalPanel>
       </g:north>
       <g:center>
           <g:SplitLayoutPanel ui:field="modeLayout">
                <g:north size="50">
                    <g:HTML ui:field="zboub">Zboub</g:HTML>
                </g:north>
                <g:center>
                    <g:DockLayoutPanel>
                        <g:north size="22">
                            <g:FlexTable cellSpacing='0' cellPadding='0'
                                styleName="{style.table}" ui:field="modeHeader">
                            </g:FlexTable>
                        </g:north>
                        <g:center>
                            <g:ScrollPanel>
                                <g:FlexTable cellSpacing='0' cellPadding='0'
                                    styleName="{style.table}" 
                                    ui:field="modeMedialist">
                                </g:FlexTable>
                            </g:ScrollPanel>
                        </g:center>
                    </g:DockLayoutPanel>
                </g:center>
           </g:SplitLayoutPanel>
       </g:center>
       <g:south size="20">
           <g:HorizontalPanel ui:field="modeBottomToolbar">
           </g:HorizontalPanel>
       </g:south>
    </g:DockLayoutPanel>
</ui:UiBinder>