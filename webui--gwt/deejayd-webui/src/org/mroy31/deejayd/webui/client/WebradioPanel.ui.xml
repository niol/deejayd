<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui">
  <ui:with field="resources"
        type="org.mroy31.deejayd.webui.resources.WebuiResources"/>
  <ui:style>

  </ui:style>
  <g:DockLayoutPanel>
     <g:north size="24">
        <g:FlowPanel width="100%"
                styleName="{resources.webuiCss.modeTopToolbar}">
          <g:HorizontalPanel height="100%" spacing="2" ui:field="panelHeader">
              <g:Label
                addStyleNames="{resources.webuiCss.bold}"
                ui:field="panelTitle"></g:Label>
              <g:ListBox ui:field="sourceListBox"></g:ListBox>
          </g:HorizontalPanel>
        </g:FlowPanel>
     </g:north>

     <g:center>
         <g:DeckPanel ui:field="deckPanel">
            <g:FlowPanel>
             <g:VerticalPanel width="100%">
                <g:HorizontalPanel width="100%" ui:field="formTitlePanel"
                    styleName="{resources.webuiCss.toolbar}">
                    <g:Label
                        addStyleNames="{resources.webuiCss.italic}"
                        ui:field="formTitle"></g:Label>
                </g:HorizontalPanel>
                <g:HorizontalPanel spacing="10">
                    <g:Label ui:field="nameLabel"></g:Label>
                    <g:TextBox ui:field="nameInput"></g:TextBox>
                </g:HorizontalPanel>
                <g:HorizontalPanel spacing="10">
                    <g:Label ui:field="urlLabel"></g:Label>
                    <g:TextBox ui:field="urlInput"></g:TextBox>
                </g:HorizontalPanel>
                <g:HorizontalPanel width="100%"
                    styleName="{resources.webuiCss.toolbar}"
                    ui:field="buttonPanel" spacing="2">
                  <g:Button
                      styleName="{resources.webuiCss.modeToolbarButton}
                                    {resources.webuiCss.addButton}"
                      ui:field="addButton"></g:Button>
              </g:HorizontalPanel>
             </g:VerticalPanel>
            </g:FlowPanel>

            <g:DockLayoutPanel>
                <g:north size="22">
                    <g:HorizontalPanel width="100%" height="100%"
                            ui:field="categoriesToolbar"
                            styleName="{resources.webuiCss.toolbar}">
                        <g:Label
                          addStyleNames="{resources.webuiCss.italic}"
                          ui:field="categoriesTitle"></g:Label>
                    </g:HorizontalPanel>
                </g:north>

                <g:center>
                    <g:ScrollPanel ui:field="categoriesScrollPanel">
                        <g:VerticalPanel width="100%" ui:field="categoriesList">
                        </g:VerticalPanel>
                    </g:ScrollPanel>
                </g:center>
            </g:DockLayoutPanel>

         </g:DeckPanel>
     </g:center>
  </g:DockLayoutPanel>
</ui:UiBinder>