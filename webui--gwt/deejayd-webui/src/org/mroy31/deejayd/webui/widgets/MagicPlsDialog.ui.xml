<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui">

  <g:DialogBox ui:field="dialog" modal="true" animationEnabled="true">
    <g:VerticalPanel ui:field="mainPanel">
      <g:Label ui:field="rulesLabel"></g:Label>
      <g:VerticalPanel ui:field="rulesList"></g:VerticalPanel>
      <g:Button ui:field="addRuleButton"></g:Button>

      <g:HorizontalPanel>
        <g:CheckBox ui:field="useOrFilter"></g:CheckBox>
      </g:HorizontalPanel>

      <g:HorizontalPanel>
        <g:CheckBox ui:field="limitPls"></g:CheckBox>
        <g:TextBox ui:field="limitPlsNumber" enabled="false"></g:TextBox>
        <g:Label ui:field="limitPlsNumberLabel"></g:Label>
      </g:HorizontalPanel>

      <g:HorizontalPanel>
        <g:Label ui:field="limitSortLabel"></g:Label>
        <g:ListBox ui:field="limitSortOrder" enabled="false"></g:ListBox>
        <g:CheckBox ui:field="limitSortRevert" enabled="false">
        </g:CheckBox>
      </g:HorizontalPanel>

      <g:HorizontalPanel ui:field="actionPanel">
        <g:Button ui:field="cancelButton"></g:Button>
        <g:Button ui:field="saveButton"></g:Button>
      </g:HorizontalPanel>
    </g:VerticalPanel>
  </g:DialogBox>
</ui:UiBinder>